{
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs20.x",
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/sync-threads",
            "schedule": "0 * * * *"
        }
    ]
}