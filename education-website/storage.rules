rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // hero-images 폴더는 누구나 읽기 가능, 쓰기는 허용 (개발용)
    match /hero-images/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // instructors 폴더 - 강사 프로필 사진 업로드 허용
    match /instructors/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // 기타 파일은 기본 거부
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
